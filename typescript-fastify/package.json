{
  "name": "cerp-api-typescript-fastify",
  "version": "1.0.0",
  "description": "Cero API written in TypeScript with Fastify",
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": ">=22",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "NODE_ENV=production node dist/index.js",
    "start:database": "docker-compose up -d",
    "compile-schemas": "json2ts -i src/schemas -o src/@types",
    "prepare": "husky install",
    "lint": "eslint ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "fastify": "3.27.2",
    "fastify-cors": "6.0.2",
    "fastify-mongodb": "4.1.1",
    "fastify-swagger": "4.15.0",
    "mongodb": "4.4.0"

  },
  "devDependencies": {
    "tsx": "^4.17.0",
    "@types/mongodb": "4.0.7",
    "@types/node": "17.0.18",
    "@typescript-eslint/eslint-plugin": "5.12.0",
    "@typescript-eslint/parser": "5.12.0",
    "eslint": "8.9.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "json-schema-to-typescript": "10.1.5",
    "lint-staged": "12.3.4",
    "pino-pretty": "7.5.1",
    "prettier": "2.5.1",
    "typescript": "4.5.5"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
