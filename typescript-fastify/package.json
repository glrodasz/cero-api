  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "fastify": "^5.6.0",
    "mongoose": "^8.5.3"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "tsx": "^4.18.0",
    "typescript": "^5.5.4"
  }
}
